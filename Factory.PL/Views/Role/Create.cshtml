@model Factory.DAL.Models.Auth.ApplicationRoles
@{
    ViewData["Title"] = "Create Role";
    Layout = "_LogedUser";
}

<div class="container-fluid mt-4 shadow-lg p-3">
    <div class="mt-5">
        @await Html.PartialAsync("ErrorSummaryPartial")
    </div>
    
    <h2 class="text-center mb-4 py-3 px-4 rounded">
        <i class="bi bi-plus-circle me-2"></i> @ViewData["Title"]
    </h2>
    <form method="post">
        <div class="mb-3">
            <label for="Name" class="form-label">
                <i class="bi bi-person-badge me-2"></i> Role Name
            </label>
            <input type="text" asp-for="Name" class="form-control" id="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="text-center mb-4 py-3 px-4 rounded">
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-check-circle me-2"></i> Create Role
            </button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
