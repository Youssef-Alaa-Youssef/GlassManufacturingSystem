@model Factory.PL.ViewModels.RoleListViewModel

@{
    ViewData["Title"] = "Role Report";
    Layout = "_LogedUser";
    int Counter = 0;
}

<div class="container-fluid mt-5 shadow-lg p-4">
    @await Html.PartialAsync("ErrorSummaryPartial")

    <h2 class="text-center mb-4   py-3 px-4 rounded">
        Role Report
        <a href="javascript:window.print()" class="btn btn-outline-info float-end">
            Print Report
        </a>
    </h2>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Role Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@Counter++</td>
                    <td>@role.RoleName</td>
                </tr>
            }
        </tbody>
    </table>
</div>
