@{
    ViewData["Title"] = "Log Out";
    Layout = "_LogedUser";
}

<!-- Full-Height Container -->
<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-lg p-2" style="max-width: 500px; width: 100%; border-radius: 15px;">
        <!-- Card Header -->
        <div class="card-header border-0 text-center">
            <h1 class="card-title mb-3">
                <i class="bi bi-box-arrow-right fs-1 text-danger"></i>
            </h1>
            <h2 class="card-title mb-0">Log Out</h2>
        </div>

        <!-- Card Body -->
        <div class="card-body text-center">
            <!-- Confirmation Message -->
            <h3 class="mb-4">Are you sure you want to log out?</h3>
            <p class="text-muted mb-4">
                Logging out will securely end your session. You can log back in anytime to continue your work.
            </p>

            <!-- Buttons -->
            <div class="d-grid gap-3">
                <!-- Log Out Button -->
                <form asp-action="ActualLogOut" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-lg w-100">
                        <i class="bi bi-box-arrow-right me-2"></i> Log Out
                    </button>
                </form>

                <!-- Cancel Button -->
                <a asp-action="DashBoard" asp-controller="Home" class="btn btn-outline-secondary btn-lg w-100">
                    <i class="bi bi-x-circle me-2"></i> Cancel
                </a>
            </div>
        </div>

        <!-- Card Footer -->
        <div class="card-footer border-0 text-center">
            <p class="text-muted mb-0">
                Need help? <a href="#" class="text-decoration-none">Contact Support</a>
            </p>
        </div>
    </div>
</div>