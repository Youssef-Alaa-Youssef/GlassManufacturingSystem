@model IEnumerable<Factory.DAL.Models.Home.FAQS>

@{
    ViewData["Title"] = "FAQs";
    Layout = "_LogedUser";
}

<div class="container shadow-lg mt-5 p-4 bg-light rounded">
    <h1 class="text-center mb-4 bg-primary text-white py-3 px-4 rounded-3 border border-light">
        <i class="bi bi-question-circle me-2"></i> FAQs
    </h1>

    <div class="d-flex justify-content-end mb-3 no-print">
        <button onclick="window.print()" class="btn btn-outline-primary me-2">
            <i class="bi bi-printer"></i> Print this page
        </button>
        <a href="@Url.Action("Create", "FAQs")" class="btn btn-outline-primary">
            <i class="bi bi-plus"></i> Create New FAQ
        </a>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Question</th>
                <th class="text-center">Answer</th>
                <th class="text-center">Created At</th>
                <th class="text-center no-print">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var faq in Model)
            {
                <tr>
                    <td class="text-center">@faq.Id</td>
                    <td>@faq.Question</td>
                    <td>@faq.Answer</td>
                    <td class="text-center">@faq.CreatedAt.ToString("g")</td>
                    <td class="text-center no-print">
                        <div class="d-flex justify-content-center">
                            <a href="@Url.Action("Details", "FAQs", new { id = faq.Id })" class="btn btn-outline-info me-2" title="View Details">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a href="@Url.Action("Edit", "FAQs", new { id = faq.Id })" class="btn btn-outline-warning me-2" title="Edit FAQ">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a href="@Url.Action("Delete", "FAQs", new { id = faq.Id })" class="btn btn-outline-danger" title="Delete FAQ">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



