@model Factory.DAL.Models.Home.FAQS

@{
    ViewData["Title"] = "Delete FAQ";
    Layout = "_LogedUser";
}

<div class="container-fluid shadow-lg mt-5 p-4  rounded">
    @await Html.PartialAsync("ErrorSummaryPartial")

    <h1 class="text-center mb-4  py-3 px-4 ">
        <i class="bi bi-trash-fill me-2"></i> Delete FAQ
    </h1>

    <h3 class="text-center mb-4">
        <i class="bi bi-question-circle me-2"></i> Are you sure you want to delete this FAQ?
    </h3>

    <div class="mb-4">
        <h4>
            <i class="bi bi-question-square me-2"></i> Question
        </h4>
        <p>@Model.Question</p>
    </div>
    <div class="mb-4">
        <h4>
            <i class="bi bi-chat-left-text me-2"></i> Answer
        </h4>
        <p>@Model.Answer</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group text-center">
            <button type="submit" class="btn btn-outline-danger">
                <i class="bi bi-trash me-2"></i> Delete
            </button>
            <a href="@Url.Action("Index", "FAQs")" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left me-2"></i> Back to List
            </a>
        </div>
    </form>
</div>
