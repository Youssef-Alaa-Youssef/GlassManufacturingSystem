@model Factory.DAL.Models.Home.FAQS

@{
    ViewData["Title"] = "FAQ Details";
    Layout = "_LogedUser";
}

<div class="container shadow-lg mt-5 p-4 bg-light rounded">
    <h1 class="text-center mb-4 bg-light text-dark py-3 px-4 rounded">
        <i class="bi bi-info-circle me-2"></i> FAQ Details
    </h1>

    <div class="mb-4">
        <h3><i class="bi bi-question-circle me-2"></i> Question</h3>
        <p>@Model.Question</p>
    </div>
    <div class="mb-4">
        <h3><i class="bi bi-chat-dots me-2"></i> Answer</h3>
        <p>@Model.Answer</p>
    </div>
    <div class="mb-4">
        <h3><i class="bi bi-calendar-check me-2"></i> Created At</h3>
        <p>@Model.CreatedAt.ToString("g")</p>
    </div>

    <div class="text-center">
        <a href="@Url.Action("Edit", "FAQs", new { id = Model.Id })" class="btn btn-outline-warning me-2" title="Edit FAQ">
            <i class="bi bi-pencil me-2"></i> Edit
        </a>
        <a href="@Url.Action("Delete", "FAQs", new { id = Model.Id })" class="btn btn-outline-danger me-2" title="Delete FAQ">
            <i class="bi bi-trash me-2"></i> Delete
        </a>
        <a href="@Url.Action("Index", "FAQs")" class="btn btn-outline-secondary" title="Back to List">
            <i class="bi bi-arrow-left me-2"></i> Back to List
        </a>
    </div>
</div>
