@model IEnumerable<Factory.PL.ViewModels.Warehouses.ItemDetailsViewModel>

@{
    ViewData["Title"] = "Items";
    Layout = "_LogedUser";
}

<div class="container-fluid card  shadow mt-3 p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")
    @await Html.PartialAsync("_PageTitle")

    <p>
        <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Color</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Value</th>
                <th>Warehouse</th>
                <th>Sub-Warehouse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Type</td>
                    <td>@item.Color</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.TotalValue.ToString("C")</td>
                    <td>@item.WarehouseName</td>
                    <td>@item.SubWarehouseName</td>
                    <td>
                        <div class="d-flex flex-wrap gap-2 justify-content-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm w-100 w-md-auto">
                                🔍 Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm w-100 w-md-auto">
                                ✏ Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm w-100 w-md-auto">
                                🗑 Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>