@model Factory.PL.ViewModels.Permission.ModulesViewModel

@{
    ViewData["Title"] = "Create Module";
    Layout = "_LogedUser";

}
<div class="container-fluid mt-4 shadow p-3 rounded">
    <div class="mt-5">
        @await Html.PartialAsync("ErrorSummaryPartial")
    </div>

    <h2 class="text-center mb-4 py-3 px-4 rounded">
        <i class="bi bi-person-badge me-2"></i> @ViewData["Title"]
    </h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Url" class="control-label"></label>
            <input asp-for="Url" class="form-control" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IconClass" class="control-label"></label>
            <input asp-for="IconClass" class="form-control" />
            <span asp-validation-for="IconClass" class="text-danger"></span>
        </div>

        <div class="text-center mb-4  py-3 px-4 rounded">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
