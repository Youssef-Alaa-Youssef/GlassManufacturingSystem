@{
    ViewData["Title"] = "Error";
    Layout = "_LogedUser";
}

<div class="container-fluid card  shadow mt-3 p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")

    @await Html.PartialAsync("_PageTitle")    <
        div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body py-5">
                    <div class="error-icon">
                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h1 class="mt-4 fw-bold text-danger">Oops! Something went wrong.</h1>
                    <p class="text-muted">
                        We're sorry, but an unexpected error has occurred. <br>
                        Please try again later or contact support if the problem persists.
                    </p>

                    <div class="mt-4">
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-door"></i> Return Home
                        </a>
                        <a href="/Contact" class="btn btn-outline-dark btn-lg">
                            <i class="bi bi-envelope"></i> Contact Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
