@model IEnumerable<Factory.DAL.Models.Permission.SubModule>

@{
    ViewData["Title"] = "SubModules";
    Layout = "_LogedUser";

}

<div class="container-fluid card  shadow mt-3 p-3">
    @await Html.PartialAsync("ErrorSummaryPartial")

    @await Html.PartialAsync("_PageTitle")


    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Controller</th>
                <th>Action</th>
                <th>Title</th>
                <th>Module</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Controller</td>
                    <td>@item.Action</td>
                    <td>@item.Title</td>
                    <td>@item.Module?.Name</td>
                    <td>
                    <div class="d-flex flex-wrap gap-2 justify-content-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm w-100 w-md-auto">
                            🔍 Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm w-100 w-md-auto">
                            ✏ Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm w-100 w-md-auto">
                            🗑 Delete
                        </a>
                    </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>