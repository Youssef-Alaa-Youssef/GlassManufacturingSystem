@model IEnumerable<Factory.DAL.Models.Customers.Order>

@{
    ViewData["Title"] = "Orders List";
}
<div class="container">
<h1>Orders</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Glass Type</th>
            <th>Quantity</th>
            <th>Total Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerId</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.GlassType</td>
                <td>@order.Quantity</td>
                <td>@order.TotalCost</td>
                <td>
                    <a href="@Url.Action("Details", "Orders", new { id = order.Id })">View</a> |
                    <a href="@Url.Action("Edit", "Orders", new { id = order.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Orders", new { id = order.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Orders")" class="btn btn-primary">Create New Order</a>
</div>