@model Factory.DAL.Models.Customers.Order

@{
    ViewData["Title"] = "Delete Order";
}
<div class="container">
<h1>Delete Order</h1>

<div>
    <strong>Customer:</strong> @Model.CustomerId
</div>
<div>
    <strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")
</div>
<div>
    <strong>Glass Type:</strong> @Model.GlassType
</div>

<p>Are you sure you want to delete this order?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a href="@Url.Action("Index", "Orders")" class="btn btn-secondary">Back to List</a>
</div>