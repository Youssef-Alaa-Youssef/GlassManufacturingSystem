@model Factory.PL.ViewModels.Home.PartnerViewModel

@{
    ViewData["Title"] = "Create Partner";
    Layout = "_LogedUser";
}

<div class="container mt-4 shadow-lg p-3 bg-light rounded">
        @await Html.PartialAsync("ErrorSummaryPartial")

    <h2 class="text-center mb-4 bg-secondary text-light py-3 px-4 rounded">
        <i class="bi bi-plus-circle me-2"></i> @ViewData["Title"]
    </h2>


    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LogoFile" class="form-label">Logo</label>
            <input asp-for="LogoFile"  class="form-control" />
            <span asp-validation-for="LogoFile" class="text-danger"></span>
        </div>

        <div class="text-center mb-4">
            <button type="submit" class="btn btn-outline-secondary">
                <i class="bi bi-check-circle me-2"></i> Create Partner
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
